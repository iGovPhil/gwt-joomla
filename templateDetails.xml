<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="template" client="site">
  <name>gwt-joomla-3.5</name>
  <version>3.5</version>
  <creationDate>Dec 2014</creationDate>
  <author>iGov Philippines</author>
  <authorEmail>gwtsupport@i.gov.ph</authorEmail>
  <authorURL>http://i.gov.ph</authorURL>
  <copyright>All content is in the public domain unsless otherwise stated.</copyright>
  <license>GNU General Public License version 2 or later</license>
  <description>Government Web Template for Joomla 3.x, version 3.5</description>
  
  <files>
	  <filename>index.php</filename>
	  <filename>templateDetails.xml</filename>
      <filename>framework.php</filename>
	  <filename>favicon.ico</filename>
	  <filename>style.css</filename>
	  <filename>template_preview.png</filename>
	  <filename>template_thumbnail.png</filename>
	  <filename>robots.txt</filename>
      <folder>css</folder>
      <folder>js</folder>
      <folder>images</folder>
      <folder>html</folder>
      <folder>layouts</folder>
  </files>
  
  <positions>
		<position>topbar-left</position>
    <position>topbar-right</position>
    <position>search</position>
		<position>masthead-feature-1</position>
		<position>masthead-feature-2</position>
		<position>banner</position>
		<position>banner-featured</position>
		<position>auxiliary-menu</position>
		<position>breadcrumbs</position>
    <position>right-sidebar</position>
    <position>content-top</position>
		<position>content-bottom</position>
		<position>left-sidebar</position>
    <position>panel-top-1</position>
    <position>panel-top-2</position>
    <position>panel-top-3</position>
    <position>panel-top-4</position>
    <position>panel-btm-1</position>
    <position>panel-btm-2</position>
    <position>panel-btm-3</position>
    <position>panel-btm-4</position>
    <position>footer-1</position>
    <position>footer-2</position>
    <position>footer-3</position>
    <position>footer-4</position>
  </positions>

  <config>
    <fields name="params">  
          
      <fieldset name="themeOptions" label="Theme Options">

        <field name="agencyLogo" class="" type="media" default=""
          label="Header Logo Upload"
          description="Upload the image of your logo with agency name here" />
		  
		<field name="logoPosition"
			type="radio"
			class="btn-group"
			default="0"
			label="Header Logo Position"
			description="Select Logo Position">
			
			<option value="0">LEFT</option>
			<option value="1">CENTER</option>
		</field>
			
        <field name="headerBackgroundColor" class="" type="color" default="#0D4E86"
          label="Header Background Color"
          description="Enter the hex code for your header background color." />

        <field name="headerBackgroundImage" class="" type="media" default=""
          label="Header Background Image"
          description="Enter your header's background image here." />
		  
  		<field name="headerColumns" type="radio" class="btn-group" default="0" label="Header Columns" description="Select number of columns for header.">
  			<option value="0">1 COL</option>
  			<option value="1">2 COLS</option>
  			<option value="2">3 COLS Left</option>
			<option value="3">3 COLS Right</option>
  		</field>
          
        <field name="bannerBackgroundColor" class="" type="color" default="#0D4E86"
          label="Banner Background Color"
          description="Enter the hex code for your banner background color." />
		  
		<field name="bannerBackgroundImage" class="" type="media" default="" label="Banner Background Image" description="Enter your banner's background image here." />
		
		<field name="bannerPosition" type="radio" class="btn-group" default="0" label="Banner Position" description="Select banner position">
			<option value="0">Standard 1 COL</option>
			<option value="1">Standard 2 COLS</option>
			<option value="2">Full Width</option>
		</field>
		
        <field name="bannerFeaturedColor" class="" type="color" default=""
          label="Banner Featured Content Color"
          description="Enter the hex code for your banner's featured content background color." />
		  
          <field name="bannerFeaturedImage" class="" type="media" default=""
            label="Banner Featured Content Background Image"
            description="Enter your banner's featured content background image here." />
		
		<field name="sidebarPosition" type="radio" class="btn-group" default="3" label="Sidebar Position" description="Select sidebar position">
			<option value="0">LEFT</option>
      <option value="3">BOTH</option>
			<option value="1">RIGHT</option>
			<option value="2">NO SIDEBAR</option>
		</field>
		
        <!-- TODO: must create a pst module -->
        <field name="pstPosition" type="radio" class="btn-group" default="0" label="PST Position" description="Position of the Philippine Standard Module. If none, must have a replacement PST module.">
          <option value="1">LEFT</option>
          <option value="0">NONE</option>
          <option value="2">RIGHT</option>
        </field>

        <field name="pstHeight" label="PST height" description="Height of the pst module" type="text" default="40" />
    </fieldset>  
        
    <fieldset name="sliderOptions" label="Image Slider">
            
        <field name="imgUrl1" label="Image 1" description="Image 1" type="media" />
        <field name="imgExcerpt1" label="Caption 1" description="Caption 1" type="text" />
        <field name="imgLink1" label="Link 1" description="Link 1" type="text" />
				
        <field name="imgUrl2" label="Image 2" description="Image 1" type="media" />
        <field name="imgExcerpt2" label="Caption 2" description="Caption 2" type="text" />
        <field name="imgLink2" label="Link 2" description="Link 2" type="text" />
            
        <field name="imgUrl3" label="Image 3" description="Image 3" type="media" />
        <field name="imgExcerpt3" label="Caption 3" description="Caption 3" type="text" />
        <field name="imgLink3" label="Link 3" description="Link 3" type="text" />
            
        <field name="imgUrl4" label="Image 4" description="Image 4" type="media" />
        <field name="imgExcerpt4" label="Caption 4" description="Caption 4" type="text" />
        <field name="imgLink4" label="Link 4" description="Link 4" type="text" />
        
        <field name="imgUrl5" label="Image 5" description="Image 5" type="media" />
        <field name="imgExcerpt5" label="Caption 5" description="Caption 5" type="text" />
        <field name="imgLink5" label="Link 5" description="Link 5" type="text" />
            
        <field name="imgUrl6" label="Image 6" description="Image 6" type="media" />
        <field name="imgExcerpt6" label="Caption 6" description="Caption 6" type="text" />
        <field name="imgLink6" label="Link 6" description="Link 6" type="text" />
    	
    	<field name="imgUrl7" label="Image 7" description="Image 7" type="media" />
        <field name="imgExcerpt7" label="Caption 7" description="Caption 7" type="text" />
        <field name="imgLink7" label="Link 7" description="Link 7" type="text" />
        
        <field name="imgUrl8" label="Image 8" description="Image 8" type="media" />
        <field name="imgExcerpt8" label="Caption 8" description="Caption 8" type="text" />
        <field name="imgLink8" label="Link 8" description="Link 8" type="text" />
        
        <field name="imgUrl9" label="Image 9" description="Image 9" type="media" />
        <field name="imgExcerpt9" label="Caption 9" description="Caption 9" type="text" />
        <field name="imgLink9" label="Link 9" description="Link 9" type="text" />
		
        <field name="imgUrl10" label="Image 10" description="Image 10" type="media" />
        <field name="imgExcerpt10" label="Caption 10" description="Caption 10" type="text" />
        <field name="imgLink10" label="Link 10" description="Link 10" type="text" />
                  
    </fieldset>    
          
    <fieldset name="accessibility" label="Accessibility">
        <!-- TODO: test shortcut for mac safari, mac chrome -->
        <field type="note" label="Shortcut Keys Combination Activation" description="Combination keys used for each browser." />
        <field type="note" description="Chrome for Linux press (Alt+Shift+shortcut_key)" />
        <field type="note" description="Chrome for Windows press (Alt+shortcut_key)" />
        <field type="note" description="For Firefox press (Alt+Shift+shortcut_key)" />
        <field type="note" description="For Internet Explorer press (Alt+Shift+shortcut_key) then press (enter)" />
		<field name="accessAccessibility" class="" type="text" default="" label="Accessibility Access Key Site (Combination+0): Accessibility Statement" description="Enter link for accessibility accesskey (0)" />
		<field name="accessHome" class="" type="text" default="index.php" label="Accessibility Access Key Site (Alt+1): Home" description="Enter link for home accesskey (1)" />
		<field name="accessContent" class="" type="text" default="#maincontents" label="Accessibility Access Key Site (Alt+R): Main Content" description="Enter link for main content accesskey (R)" />
		<field name="accessFAQ" class="" type="text" default="" label="Accessibility Access Key Site (Alt+5): FAQ" description="Enter link for FAQ accesskey (5)" />
		<field name="accessContact" class="" type="text" default="" label="Accessibility Access Key Site (Alt+C): Contact" description="Enter link for search accesskey (C)" />
		<field name="accessFeedback" class="" type="text" default="" label="Accessibility Access Key Site (Alt+K): Feedback" description="Enter link for search accesskey (K)" />
		<field name="accessSiteMap" class="" type="text" default="#agencyfooter" label="Accessibility Access Key Site (Alt+M): Site Map" description="Enter link for search accesskey (M)" />
		<field name="accessSearch" class="" type="text" default="" label="Accessibility Access Key Site (Alt+S): Search" description="Enter link for search accesskey (S)" />
      </fieldset>
    </fields>
  </config>
</extension>